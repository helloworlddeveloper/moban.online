<!-- BEGIN: main --><style>    .item-menu{        float: left;        padding-right: 10px;        padding-bottom: 5px;    }</style><div id="menu_control"><!-- BEGIN: control1 --><div class="item-menu dropdown">    <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-shopping-cart" aria-hidden="true">&nbsp;</i>Tác vụ hàng hóa        <span class="caret"></span></button>    <ul class="dropdown-menu">        <!-- BEGIN: loop -->        <li><a title="{CONTROL.title}" href="{CONTROL.link}"><i class="fa {CONTROL.icon}">&nbsp;</i>{CONTROL.title}</a></li>        <!-- END: loop -->    </ul></div><!-- END: control1 --><!-- BEGIN: control2 --><div class="item-menu dropdown">    <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-users" aria-hidden="true">&nbsp;</i>Quản trị hệ thống        <span class="caret"></span></button>    <ul class="dropdown-menu">        <!-- BEGIN: loop -->        <li><a title="{CONTROL.title}" href="{CONTROL.link}"><i class="fa {CONTROL.icon}">&nbsp;</i>{CONTROL.title}</a></li>        <!-- END: loop -->    </ul></div><!-- END: control2 --><!-- BEGIN: control3 --><div class="item-menu dropdown">    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-area-chart" aria-hidden="true">&nbsp;</i>Tổng hợp thống kê        <span class="caret"></span></button>    <ul class="dropdown-menu">        <!-- BEGIN: loop -->        <li><a title="{CONTROL.title}" href="{CONTROL.link}"><i class="fa {CONTROL.icon}">&nbsp;</i>{CONTROL.title}</a></li>        <!-- END: loop -->    </ul></div><!-- END: control3 --><a class="btn btn-danger" href="{LOGOUT}"><i class="fa fa-share" aria-hidden="true">&nbsp;</i>Thoát</a></div><script>	$("#menu_control .dropdown").click(function() {			$(this).toggleClass("open")	})</script><!-- END: main -->