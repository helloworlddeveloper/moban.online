<!-- BEGIN: main  -->    <h2>Basic Modal Example</h2>    <!-- Trigger the modal with a button --><button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>    <!-- Modal -->    <div class="modal fade" id="myModal" role="dialog">        <div class="modal-dialog">            <!-- Modal content-->            <div class="modal-content">                <div class="modal-header">                    <button type="button" class="close" data-dismiss="modal">&times;</button>                    <h4 class="modal-title">{DATA.title}</h4>                </div>                <div class="modal-body">                    <!-- BEGIN: showtype0  -->                    <a class="click_action_link" target="_blank" href="{DATA.link_download}"><img class="img-thumbnail" alt="{DATA.title}" id="popup_image" src="{DATA.image}" /></a>                    <!-- END: showtype0  -->                    <!-- BEGIN: showtype1  -->                    <a href="javascript:void(0);" class="click_action"><img class="img-thumbnail" alt="{DATA.title}" id="popup_image" src="{DATA.image}" /></a>                    <!-- END: showtype1  -->                    <!-- BEGIN: showtype2  -->                    <a href="javascript:void(0);" class="click_action"><img class="img-thumbnail" alt="{DATA.title}" id="popup_image" src="{DATA.image}" /></a>                    <!-- END: showtype2  -->                    <form class="form" id="form_popup" action="{NV_BASE_SITEURL}index.php?{NV_LANG_VARIABLE}={NV_LANG_DATA}&amp;{NV_NAME_VARIABLE}={MODULE_NAME}&amp;{NV_OP_VARIABLE}={OP}" method="post">                        <input type="hidden" name="byid" value="{DATA.id}" />                        <input type="hidden" name="modulename" value="{DATA.modulename}" />                        <input type="hidden" name="idpost" value="{DATA.idpost}" />                        <div class="table-responsive">                            <table class="table" id="form-popup">                                <caption class="viewonstep">                                {DATA.title}                                <br />                                {DATA.description}                            </caption>                                <tbody>                                <tr class="step1">                                    <td><input class="form-control" placeholder="{BLANG.fullname}(*)" type="text" name="fullname" value="{ROW.fullname}" required="required" oninvalid="setCustomValidity( nv_required )" oninput="setCustomValidity('')" /></td>                                </tr>                                <tr class="step1">                                    <td><input class="form-control" type="text" placeholder="{BLANG.phone}(*)" name="phone" value="{ROW.phone}" required="required" oninvalid="setCustomValidity( nv_required )" oninput="setCustomValidity('')" /></td>                                </tr>                                <tr class="step1">                                    <td>                                        <select class="form-control" onchange="nv_get_district(this.value, 0)" name="provinceid">                                            <option value="0">{BLANG.provinceid}</option>                                            <!-- BEGIN: provinceid  -->                                            <option value="{PROVINCE.id}">{PROVINCE.title}</option>                                            <!-- END: provinceid  -->                                        </select>                                        <div id="district_data" style="padding-top:10px">                                            <select style="width: 100%;" class="form-control" name="districtid">                                                <option value="0">{BLANG.districtid}</option>                                            </select>                                        </div>                                    </td>                                </tr>                                <tr class="step1">                                    <td>                                    <input type="button" name="next2" value="{BLANG.register_info}" class="btn btn-primary" />                                </td>                                </tr>                                <tr class="step2">                                    <td>                                        <div style="font-size:17px;"><span id="url_link">{BLANG.link_download}&nbsp;<a target="_blank" href=""><strong style="color: #f00;">{BLANG.vaoday}</strong></a>&nbsp;{BLANG.todownload}</span></div>                                    </td>                                </tr>                                <tr class="step3">                                    <td>                                        <div style="font-size:17px;">{BLANG.thankyouforregister}</div>                                    </td>                                </tr>                                </tbody>                            </table>                        </div>                    </form>                </div>                <div class="modal-footer">                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>            </div>            </div>        </div>    </div><link type="text/css" href="{NV_BASE_SITEURL}{NV_ASSETS_DIR}/js/jquery-ui/jquery-ui.min.css" rel="stylesheet" /><link rel="stylesheet" href="{NV_BASE_SITEURL}{NV_ASSETS_DIR}/js/select2/select2.min.css"><script type="text/javascript" src="{NV_BASE_SITEURL}{NV_ASSETS_DIR}/js/select2/select2.min.js"></script><script type="text/javascript" src="{NV_BASE_SITEURL}{NV_ASSETS_DIR}/js/select2/i18n/{NV_LANG_INTERFACE}.js"></script><script type="text/javascript" src="{NV_BASE_SITEURL}{NV_ASSETS_DIR}/js/jquery-ui/jquery-ui.min.js"></script><script type="text/javascript" src="{NV_BASE_SITEURL}{NV_ASSETS_DIR}/js/language/jquery.ui.datepicker-{NV_LANG_INTERFACE}.js"></script><script type="text/javascript">    jQuery(document).ready(function ($) {        var timer_close = {CONFIG.timer_close};        if ($.cookie('popup_site_{module_data}_{op}_{DATA.contentid}') != '0') {            setTimeout(function() {                $('#myModal').modal();            }, '{CONFIG.timer_open}');            <!-- BEGIN: timer_close -->            setTimeout(function() {                $('#myModal').modal('hide');            }, timer_close);            <!-- END: timer_close -->        }        $.cookie('popup_site_{module_data}_{op}_{DATA.contentid}', '1', {            path: '/',            expires: 7        });    });    function nv_get_district(provinceid, districtid) {        if( provinceid == 0 ){            provinceid = $('select[name=provinceid]').val();        }        $.post(nv_base_siteurl + 'index.php?' + nv_name_variable + '={module}&' + nv_fc_variable + '=main&nocache=' + new Date().getTime(), 'loaddistrict=1&provinceid=' + provinceid + '&districtid=' + districtid, function(res) {            $("#district_data").html( res );        });    }    $('.step1,.step2,.step3,.viewonstep').hide();    $('.click_action').click(function(){        $.post(nv_base_siteurl + 'index.php?' + nv_name_variable + '={module}&' + nv_fc_variable + '=main&nocache=' + new Date().getTime(), 'click=1&byid=' + {DATA.id}, function(res) {            return;        });        $('.step1').show();        $('.viewonstep').show();        $('.click_action img').hide();    })    $('.click_action_link').click(function(){        $.post(nv_base_siteurl + 'index.php?' + nv_name_variable + '={module}&' + nv_fc_variable + '=main&nocache=' + new Date().getTime(), 'click=1&byid=' + {DATA.id}, function(res) {            return;        });    })    $('input[name=next2]').click(function(){        $('input,select').parent().removeClass('has-error has-feedback');        var fullname = $('input[name="fullname"]').val();        if( fullname == '')        {            $('input[name="fullname"]').focus();            $('input[name="fullname"]').attr('title', '{BLANG.error_fullname}');            $('input[name="fullname"]').tooltip('show');            $('input[name="fullname"]').parent().addClass('has-error has-feedback');            return false;        }        var phone = $('input[name="phone"]').val();        var intRegexPhone = /^[0-9]+$/        if((phone.length < 10 || phone.length > 11) || (!intRegexPhone.test(phone)))        {            $('input[name="phone"]').focus();            $('input[name="phone"]').attr('title', '{BLANG.error_phone}');            $('input[name="phone"]').tooltip('show');            $('input[name="phone"]').parent().addClass('has-error has-feedback');            return false;        }        $.post(nv_base_siteurl + 'index.php?' + nv_name_variable + '={module}&' + nv_fc_variable + '=main&nocache=' + new Date().getTime(), 'submit=1&' + $('#form_popup').serialize(), function(res) {            res = res.split('_');            if( res[0] == 'OK'){                $('.step1').hide();                if( '{DATA.showtype}' == 2 ){                    $('.step2').show();                    $('#url_link a').attr( 'href', nv_base_siteurl + 'index.php?' + nv_name_variable + '={module}&' + nv_fc_variable + '=main&byid={DATA.id}&downloadid=' + res[1] );                }                else{                    $('.step3').show();                }            }        });    })    //<![CDATA[    jQuery.cookie = function (key, value, options) {        if (arguments.length > 1 && String(value) !== "[object Object]") {            options = jQuery.extend({}, options);            if (value === null || value === undefined) {                options.expires = -1;            }            if (typeof options.expires === 'number') {                var days = options.expires,                    t = options.expires = new Date();                t.setDate(t.getDate() + days);            }            value = String(value);            return (document.cookie = [                encodeURIComponent(key), '=',                options.raw ? value : encodeURIComponent(value),                options.expires ? '; expires=' + options.expires.toUTCString() : '', // use expires attribute, max-age is not supported by IE                options.path ? '; path=' + options.path : '',                options.domain ? '; domain=' + options.domain : '',                options.secure ? '; secure' : ''            ].join(''));        }        // key and possibly options given, get cookie...        options = value || {};        var result, decode = options.raw ? function (s) {            return s;        } : decodeURIComponent;        return (result = new RegExp('(?:^|; )' + encodeURIComponent(key) + '=([^;]*)').exec(document.cookie)) ? decode(result[1]) : null;    };    //]]></script><!-- END: main -->